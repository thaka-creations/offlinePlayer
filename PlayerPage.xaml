<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:tplayer.ViewModel"
             xmlns:behaviors="clr-namespace:tplayer.Behaviors"
             x:Class="tplayer.PlayerPage"
             Title="Video Player">

    <ContentPage.BindingContext>
        <vm:PlayerViewModel />
    </ContentPage.BindingContext>

    <Grid RowDefinitions="*, Auto">
        <!-- Video Player -->
        <MediaElement
            x:Name="MediaPlayer"
            Grid.Row="0"
            Source="{Binding CurrentMedia}"
            ShouldAutoPlay="True"
            StateChanged="OnMediaStateChanged"
            Position="{Binding Position, Mode=TwoWay}"
            ShowsPlaybackControls="False"/>

        <!-- Controls Panel -->
        <Grid Grid.Row="1" 
              Padding="20"
              ColumnDefinitions="Auto,*,Auto"
              BackgroundColor="#222222">

            <!-- Play/Pause Button -->
            <Button Grid.Column="0"
                    Text="{Binding PlayPauseIcon}"
                    Command="{Binding PlayPauseCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="24"
                    WidthRequest="50"
                    HeightRequest="50"
                    Margin="0,0,10,0"/>

            <!-- Progress Bar -->
            <Grid Grid.Column="1" 
                  RowDefinitions="Auto,Auto">
                
                <Slider Value="{Binding Position.TotalSeconds, Mode=TwoWay}"
                        Maximum="{Binding Duration.TotalSeconds}"
                        Minimum="0"
                        ThumbColor="#4a90e2"
                        MinimumTrackColor="#4a90e2"
                        MaximumTrackColor="#666666"/>
                
                <Label Grid.Row="1" 
                       Text="{Binding TimeDisplay}"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </Grid>

            <!-- Volume Control -->
            <HorizontalStackLayout Grid.Column="2" 
                                 Spacing="10">
                <Label Text="{Binding VolumeIcon}"
                       TextColor="White"
                       FontSize="20"
                       VerticalOptions="Center"/>
                <Slider Value="{Binding Volume, Mode=TwoWay}"
                        Maximum="100"
                        Minimum="0"
                        WidthRequest="100"
                        ThumbColor="#4a90e2"
                        MinimumTrackColor="#4a90e2"
                        MaximumTrackColor="#666666"/>
            </HorizontalStackLayout>
        </Grid>

        <!-- Overlay for Loading -->
        <Grid Grid.Row="0" 
              BackgroundColor="#80000000"
              IsVisible="{Binding IsLoading}">
            <ActivityIndicator IsRunning="{Binding IsLoading}"
                             Color="White"
                             HorizontalOptions="Center"
                             VerticalOptions="Center"/>
        </Grid>
    </Grid>

    <!-- Error Message -->
    <ContentPage.Behaviors>
        <behaviors:DisplayErrorBehavior ErrorMessage="{Binding ErrorMessage}"/>
    </ContentPage.Behaviors>

</ContentPage>